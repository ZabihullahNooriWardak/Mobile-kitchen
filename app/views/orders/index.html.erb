<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h1 class="mb-0">Your Orders</h1>
    </div>
    <div class="card-body">
      <% @orders.each do |order| %>
        <div class="order-item mb-3 p-4 border rounded shadow-sm">
          <h5>Order #<%= order.id %> - <%= order.full_name %>'s Order</h5>
          <p>
            Status: 
            <span class="badge bg-<%= order.status == 'pending' ? 'warning' : 'success' %>">
              <%= order.status.capitalize %>
            </span>
          </p>
          <div class="btn-group mt-3" role="group">
            <%= link_to 'View Details', order_path(order), class: "btn btn-primary btn-sm" %>
            <% if order.status == 'pending' %>
              <%= link_to 'Edit', edit_order_path(order), class: "btn btn-secondary btn-sm" %>
              <%= button_to 'Cancel', order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if @orders.empty? %>
        <div class="alert alert-info" role="alert">
          You have no orders at this time.
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .order-item {
    background-color: #f8f9fa;
    border-left: 5px solid #007bff;
  }
  .order-item h5 {
    font-weight: bold;
  }
  .order-item p {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  .btn-group .btn {
    margin-right: 0.5rem;
  }
  .card-header {
    background-color: #007bff;
    color: white;
  }
  .card {
    border: none;
  }
  .card-body {
    padding: 2rem;
  }
</style>

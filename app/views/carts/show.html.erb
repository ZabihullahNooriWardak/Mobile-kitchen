<h1>Your Cart</h1>

<% if @cart && @cart.cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.food.name %></td>
          <td><%= item.food.price %></td>
          <td><%= button_to 'Remove', cart_item_path(item), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Order Now', new_order_path, class: 'button' %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

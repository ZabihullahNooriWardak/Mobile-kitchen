<!-- app/views/orders/show.html.erb -->
<div class="container mt-4">
  <h1>Order Details</h1>
  <p><strong>Address:</strong> <%= @order.address %></p>
  <p><strong>Full Name:</strong> <%= @order.full_name %></p>
  <p><strong>Phone Number:</strong> <%= @order.phone_number %></p>
  <p><strong>Guests Number:</strong> <%= @order.guests_number %></p>
  <p><strong>Date:</strong> <%= @order.date %></p>
  <p><strong>Description:</strong> <%= @order.description %></p>

  <h2>Order Items</h2>
  <ul>
    <% @order.order_items.each do |item| %>
      <li><%= item.food.name %> - <%= item.food.price %></li>
    <% end %>
  </ul>

  <% if @prebuilt_menu.present? %>
    <h2>Prebuilt Menu</h2>
    <p><strong>Name:</strong> <%= @prebuilt_menu.name %></p>
    <p><strong>Cost:</strong> <%= @prebuilt_menu.cost %></p>
  <% end %>
</div>

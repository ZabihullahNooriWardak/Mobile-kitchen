<div class="container mt-4">
  <h1 class="mb-3">Reviews</h1>

  <div id="reviews">
    <% if @reviews.empty? %>
      <div class="alert alert-info">
        No reviews available.
      </div>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="card mb-3">
          <div class="card-body">
            <%= render review %>
            <div class="mt-3 d-flex justify-content-between">
              <%= link_to "Show this review", review, class: "btn btn-primary btn-sm" %>
              <% if current_user.user_detail&.is_admin %>
                <%= button_to "Delete", review, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

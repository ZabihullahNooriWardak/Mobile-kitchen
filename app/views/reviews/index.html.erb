<div class="container" style="margin-right: 5px;">
  <h1 class="mt-4 mb-3">Reviews</h1>

  <div id="reviews">
    <% @reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <%= render review %>
          <p class="mt-3">
            <%= link_to "Show this review", review, class: "btn btn-primary btn-sm me-2" %>
            <% if current_user.user_detail&.is_admin %>
              <%= button_to "Delete", review, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "New review", new_review_path, class: "btn btn-success" %>
  </div>
</div>

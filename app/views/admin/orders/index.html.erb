<div class="container mt-5">
  <h1 class="text-center mb-4"><%= t("all_orders") %></h1>

  <table id="ordersTable" class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= t("order_id") %></th>
        <th scope="col"><%= t("status") %></th>
        <th scope="col"><%= t("actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td>
            <span class="badge bg-<%= order.status == 'pending' ? 'warning' : order.status == 'in_progress' ? 'info' : 'success' %>">
              <%= order.status.humanize %>
            </span>
          </td>
          <td>
            <%= link_to t("view_details"), admin_order_path(order), class: "btn btn-outline-dark me-2 mb-1" %>
            <%= button_to t("remove"), admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  /* General Styles */
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f7fa;
  }

  h1 {
    font-weight: bold;
    color: #444;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
  }

  /* Table Styles */
  #ordersTable {
    width: 100%;
    margin: 0 auto;
    border-collapse: separate;
    border-spacing: 0 10px;
  }

  #ordersTable thead {
    background-color: #e9ecef;
    border-radius: 10px;
  }

  #ordersTable th {
    padding: 15px;
    font-weight: bold;
    text-align: center;
    border-radius: 5px;
  }

  #ordersTable tbody tr {
    background-color: #fff;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #ordersTable tbody tr:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  #ordersTable td {
    padding: 15px;
    text-align: center;
    vertical-align: middle;
    border-radius: 5px;
  }

  /* Button Styles */
  .btn-outline-dark {
    color: #343a40;
    border: 2px solid #343a40;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .btn-outline-dark:hover {
    background-color: #343a40;
    color: #fff;
  }

  .btn-outline-danger {
    color: #dc3545;
    border: 2px solid #dc3545;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: #fff;
  }

  /* Badge Styles */
  .badge {
    font-size: 14px;
    padding: 8px 12px;
    border-radius: 12px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    #ordersTable th,
    #ordersTable td {
      font-size: 14px;
      padding: 10px;
    }

    .btn {
      font-size: 12px;
      padding: 6px 10px;
    }
  }
</style>

<%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>
<%= javascript_include_tag 'https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js' %>
<%= stylesheet_link_tag 'https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css' %>

<script>
  $(document).ready(function() {
    $('#ordersTable').DataTable({
      "order": [[0, "desc"]], // Order by ID descending
      "language": {
        "search": "Search by Order ID:"
      },
      "columnDefs": [
        {
          "targets": [1, 2], // Make these columns unsortable
          "orderable": false
        }
      ],
      "pageLength": 10 // Set default page length
    });
  });
</script>

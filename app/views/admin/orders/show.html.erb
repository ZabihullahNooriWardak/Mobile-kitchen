<div class="container mt-5">
  <h1>Order Details</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">Full Name: <%= @order.full_name %></p>
      <p class="card-text">Phone Number: <%= @order.phone_number %></p>
      <p class="card-text">Address: <%= @order.address %></p>
      <p class="card-text">Guests Number: <%= @order.guests_number %></p>
      <p class="card-text">Date: <%= @order.date %></p>
      <p class="card-text">Description: <%= @order.description %></p>
      <p class="card-text">Status: <%= @order.status %></p>
    </div>
  </div>

  <h2 class="mt-4">Foods</h2>
  <ul class="list-group">
    <% @order.foods.each do |food| %>
      <li class="list-group-item"><%= food.name %> - <%= food.price %></li>
    <% end %>
  </ul>

  <%= form_with model: [:admin, @order], local: true do |form| %>
    <div class="mt-4">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, options_for_select(['pending', 'in_progress', 'delivered'], @order.status), class: "form-select" %>
    </div>
    <div class="mt-3">
      <%= form.submit 'Update Status', class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Orders', admin_orders_path, class: "btn btn-secondary mt-3" %>
</div>

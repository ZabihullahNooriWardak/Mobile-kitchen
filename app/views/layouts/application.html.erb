<!DOCTYPE html>
<html>
<head>
  <title>MyKitchen</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <!-- Add Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Add custom styles -->
  <style>
    /* Add your custom styles here */
  </style>
</head>

<body>
  <%= render 'partials/header' %>
  <!-- Dark/Light mode toggle button -->
  <button id="theme-toggle" class="btn btn-primary">Toggle Dark/Light Mode</button>

  <div class="container mt-3">
    <!-- Flash messages -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width: 600px;" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show mx-auto" style="max-width: 600px;" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>

  <%= yield %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Add your custom JavaScript -->
  <%= javascript_pack_tag 'application', 'data-turbo-track': 'reload' %>
</body>
</html>

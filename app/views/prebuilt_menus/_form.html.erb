<!-- app/views/prebuilt_menus/_form.html.erb -->

<%= form_with(model: prebuilt_menu, local: true) do |form| %>
  <% if prebuilt_menu.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h4><%= pluralize(prebuilt_menu.errors.count, "error") %> prohibited this prebuilt_menu from being saved:</h4>
      <ul>
        <% prebuilt_menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :cost, class: 'form-label' %>
    <%= form.number_field :cost, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :foods, 'Select Foods (Optional)', class: 'form-label' %>
    <%= form.collection_select :food_ids, Food.all, :id, :name, {}, { multiple: true, class: 'form-control' } %>
  </div>

  <div class="text-right mt-4">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>

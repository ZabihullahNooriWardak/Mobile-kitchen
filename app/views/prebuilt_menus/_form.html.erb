<%= form_with(model: prebuilt_menu, local: true) do |form| %>
    <% if prebuilt_menu.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(prebuilt_menu.errors.count, "error") %> prohibited this prebuilt_menu from being saved:</h2>
  
        <ul>
          <% prebuilt_menu.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :cost %>
      <%= form.number_field :cost, step: 0.01 %>
    </div>
  
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
  
    <div class="field">
      <%= form.label :foods, 'Select Foods (Optional)' %>
      <%= form.collection_select :food_ids, Food.all, :id, :name, {}, { multiple: true } %>
    </div>
  
    <div class="actions">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
  
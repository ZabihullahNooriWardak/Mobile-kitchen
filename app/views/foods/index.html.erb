<!-- app/views/foods/index.html.erb -->
<h1>Foods</h1>

<% if user_signed_in? %>
  <% if current_user.user_detail&.is_admin %>
    <%= link_to 'New Food', new_food_path %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Image</th>
      <% if user_signed_in? && current_user.user_detail&.is_admin %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.category %></td>
        <td><%= number_to_currency(food.price) %></td>
        <td>
          <% if food.image.attached? %>
            <%= image_tag food.image.variant(resize_to_limit: [100, 100]) %>
          <% else %>
            No image available
          <% end %>
        </td>
        <td><%= link_to 'Show', food %></td>
        <% if user_signed_in? && current_user.user_detail&.is_admin %>
          <td><%= link_to 'Edit', edit_food_path(food) %></td>
          <td><%= button_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

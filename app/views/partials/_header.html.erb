<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your App</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    /* Additional styling for the custom toggle button */
    .custom-toggler {
      border: none;
      background: transparent;
      font-size: 1.5rem;
      color: #000; /* Adjust the color as needed */
    }

    /* Ensuring the desktop drawer button is only visible on larger screens */
    .desktop-drawer-toggler {
      display: none;
    }

    @media (min-width: 768px) {
      .desktop-drawer-toggler {
        display: inline-block;
      }
    }
  </style>
</head>
<body>
  <!-- Desktop Navbar -->
  <nav class="desktop-navbar d-flex flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom d-none d-md-flex">
    <div class="col-md-3 mb-2 mb-md-0 ms-4">
      <h2 class="d-inline-flex link-body-emphasis text-decoration-none">
        Mobile <span class="ms-1 text-primary">Kitchen</span>
      </h2>
    </div>
    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <li><a href="#" class="nav-link px-2 link-secondary me-4">Our custom menus</a></li>
      <%= link_to "Contact Us", root_path, class: "nav-link me-4", style: "color: #333;" %>
      <%= link_to "Recommendations", root_path, class: "nav-link me-4", style: "color: #333;" %>
      <%= link_to "Foods", foods_path, class: "nav-link px-2 me-4", style: "color: #333;" %>
      <% if current_user && !current_user.user_detail&.is_admin %>
        <li><%= link_to 'View Cart', cart_path, class: "nav-link px-2 me-4", style: "color: #333;" %></li>
        <li><%= link_to 'Orders', orders_path, class: "nav-link px-2 me-4", style: "color: #333;" %></li>
      <% else %>
        <li><%= link_to 'Orders', admin_orders_path, class: "nav-link px-2 me-4", style: "color: #333;" %></li>
        <li><%= link_to 'Add food', new_food_path, class: "nav-link px-2 me-4", style: "color: #333;" %></li>
      <% end %>
      <li><%= link_to 'About', about_path, class: "nav-link px-2 me-4", style: "color: #333;" %></li>
    </ul>
    <div class="col-md-3 text-end">
      <% if user_signed_in? %>
        <div class="d-flex text-end justify-content-end">
          <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary me-2" %>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary me-4" %>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-primary me-2" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary me-4" %>
      <% end %>
    </div>
    <!-- Desktop Drawer Button -->
    <button class="custom-toggler desktop-drawer-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#desktopDrawer" aria-controls="desktopDrawer">
      <i class="fas fa-bars"></i> <!-- Font Awesome icon for bars -->
    </button>
  </nav>

  <!-- Desktop Drawer -->
  <div class="offcanvas offcanvas-start d-none d-md-flex" tabindex="-1" id="desktopDrawer" aria-labelledby="desktopDrawerLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="desktopDrawerLabel">Menu</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="navbar-nav">
        <% @foods.group_by(&:category).each do |category, foods| %>
          <li class="nav-item"><a href="<%= foods_path %>#<%= category.parameterize %>" class="nav-link link-secondary me-4"><%= category.capitalize %></a></li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Mobile Navbar -->
  <nav class="mobile-navbar d-md-none d-flex flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom">
    <div class="col-md-3 mb-2 mb-md-0 ms-4">
      <h2 class="d-inline-flex link-body-emphasis text-decoration-none">
        Mobile <span class="ms-1 text-primary">Kitchen</span>
      </h2>
    </div>
    <!-- Custom Drawer Button -->
    <button class="custom-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileDrawer" aria-controls="mobileDrawer">
      <i class="fas fa-bars"></i> <!-- Font Awesome icon for bars -->
    </button>
    <!-- Mobile Drawer -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileDrawer" aria-labelledby="mobileDrawerLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="mobileDrawerLabel">Menu</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="#category1" class="nav-link link-secondary me-4">Category 1</a></li>
          <li class="nav-item"><a href="#category2" class="nav-link link-secondary me-4">Category 2</a></li>
          <li class="nav-item"><a href="#category3" class="nav-link link-secondary me-4">Category 3</a></li>
          <li class="nav-item"><a href="#category4" class="nav-link link-secondary me-4">Category 4</a></li>
          <!-- Add more categories as needed -->
        </ul>
      </div>
    </div>
  </nav>

  <!-- Bootstrap JavaScript and dependencies -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      const offCanvasElems = document.querySelectorAll('.offcanvas');
      offCanvasElems.forEach(offCanvasEl => {
        offCanvasEl.addEventListener('hidden.bs.offcanvas', (event) => {
          document.body.classList.remove('offcanvas-backdrop');
          const backdrop = document.querySelector('.offcanvas-backdrop');
          if (backdrop) {
            backdrop.remove();
          }
        });
      });
    });
  </script>
</body>
</html>

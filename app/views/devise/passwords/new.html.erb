<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h1 class="h3 mb-3 fw-normal"><%=t("forgot_your_password")%></h1>

        <div class="form-floating mb-3">
          <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
          <label for="floatingInput">Email address</label>
        </div>

        <div class="actions text-center">
          <%= f.submit t("send_me_reset_password_instruction"), class: "btn btn-dark w-100 py-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

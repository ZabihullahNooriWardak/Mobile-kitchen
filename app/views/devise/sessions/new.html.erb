<div class="container mt-5">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4 mt-5 ">
      <h2 class="h3 mb-3 fw-normal">Please sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
          <%= f.label :email, "Email address", for: "floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
          <%= f.label :password, "Password", for: "floatingPassword" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check text-start my-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "flexCheckDefault" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "btn btn-primary w-100 py-2" %>
        </div>
      <% end %>

      <p class="mt-5 mb-3 text-body-secondary text-center">Â© 2024</p>
    </div>
  </div>
</div>


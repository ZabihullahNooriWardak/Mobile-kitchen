<h1>Order Details</h1>

<p>Address: <%= @order.address %></p>
<p>Guests Number: <%= @order.guests_number %></p>
<p>Date: <%= @order.date %></p>
<p>Description: <%= @order.description %></p>
<p>Status: <%= @order.status %></p>

<h2>Foods</h2>
<ul>
  <% @order.foods.each do |food| %>
    <li><%= food.name %> - <%= food.price %></li>
  <% end %>
</ul>

<%= form_with model: [:admin, @order], local: true do |form| %>
  <div>
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['pending', 'in_progress', 'delivered'], @order.status) %>
  </div>
  <div>
    <%= form.submit 'Update Status' %>
  </div>
<% end %>

<%= link_to 'Back to Orders', admin_orders_path %>
